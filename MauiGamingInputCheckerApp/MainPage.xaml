<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiGamingInputCheckerApp.MainPage"
             xmlns:custom="clr-namespace:MauiGamingInputCheckerApp.CustomViews"
             BackgroundColor="Gray">

    <Grid RowDefinitions="1*, 1*, 1*" 
          VerticalOptions="Center" HorizontalOptions="Center"
          RowSpacing="50">

        <Label x:Name="StatusLabel" 
               HorizontalOptions="Center"
               Text="Status"
               FontSize="24" 
               Grid.Row="0"/>

        <custom:GamingInputView x:Name="MyInput"/>

        <HorizontalStackLayout HorizontalOptions="Center"
                               Spacing="30"
                               Grid.Row="2">
            <Label Text="Controller #"
                   FontSize="24"/>
            <Slider x:Name="ControllerSelectSlider" 
                    WidthRequest="100"/>
        </HorizontalStackLayout>

    </Grid>

</ContentPage>
