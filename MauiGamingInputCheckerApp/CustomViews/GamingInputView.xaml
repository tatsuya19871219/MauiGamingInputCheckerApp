<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiGamingInputCheckerApp.CustomViews.GamingInputView">

    <AbsoluteLayout x:Name="ControllerGUIContainer"
                    WidthRequest="500">

        <Image x:Name="KEY_L1" Source="button_l1trigger.png" />
        <Image x:Name="KEY_R1" Source="button_r1trigger.png" />
        
        <Image x:Name="ControllerGUI" Source="body.png" />

        <Image x:Name="KEY_UP" Source="button_dpadup.png" />
        <Image x:Name="KEY_DOWN" Source="button_dpaddown.png" />
        <Image x:Name="KEY_LEFT" Source="button_dpadleft.png" />
        <Image x:Name="KEY_RIGHT" Source="button_dpadright.png" />

        <Image x:Name="KEY_A" Source="button_a.png" />
        <Image x:Name="KEY_B" Source="button_b.png" />
        <Image x:Name="KEY_X" Source="button_x.png" />
        <Image x:Name="KEY_Y" Source="button_y.png" />

        <Image x:Name="KEY_START" Source="button_start.png" />
        <Image x:Name="KEY_SELECT" Source="button_select.png" />

        <Label x:Name="INFO_TEXT" Text="{Binding DeviceName}" FontSize="20"/>
        <Switch IsToggled="{Binding IsPressedKeyA}"/>

    </AbsoluteLayout>
    
</ContentView>
